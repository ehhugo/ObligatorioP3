@model IEnumerable<Dominio.Entidades.Planta>

@{
    ViewData["Title"] = "BuscarPorTexto";
}

<h1>Buscar planta por texto</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="BuscarPorTexto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Ingresar texto</label>
                <input name="textoBuscado" type="search" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Buscar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if (Model != null)
{
    @if (Model.Count() > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NombreCientifico)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Ambiente)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AlturaMaxima)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Foto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FrecuenciaRiego)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TipoIluminacion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TemperaturaMantenimiento)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreCientifico)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TipoPlanta.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AlturaMaxima)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FrecuenciaRiego)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TemperaturaMantenimiento)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TipoIluminacion.Tipo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ambiente.TipoAmbiente)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreVulgar)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
     }
 }

<span class="text-danger">@ViewBag.Resultado</span>

<div>
    <a asp-action="BuscarPorTexto">Volver a búsqueda</a>
</div>
