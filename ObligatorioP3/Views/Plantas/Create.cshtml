@model ObligatorioP3.Models.ViewModelPlanta
@using Dominio.Entidades

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Planta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Planta.NombreCientifico" class="control-label"></label>
                <input asp-for="Planta.NombreCientifico" class="form-control" />
                <span asp-validation-for="Planta.NombreCientifico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Planta.Descripcion" class="control-label"></label>
                <input asp-for="Planta.Descripcion" class="form-control" />
                <span asp-validation-for="Planta.Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Planta.AlturaMaxima" class="control-label"></label>
                <input asp-for="Planta.AlturaMaxima" class="form-control" />
                <span asp-validation-for="Planta.AlturaMaxima" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Planta.FrecuenciaRiego" class="control-label"></label>
                <input asp-for="Planta.FrecuenciaRiego" class="form-control" />
                <span asp-validation-for="Planta.FrecuenciaRiego" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Planta.TemperaturaMantenimiento" class="control-label"></label>
                <input asp-for="Planta.TemperaturaMantenimiento" class="form-control" />
                <span asp-validation-for="Planta.TemperaturaMantenimiento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Tipo:</label>
                <select name="IdTipoSeleccionado">
                    @foreach (Tipo t in Model.Tipos)
                    {
                        <option value="@t.IdTipo">@t.Nombre</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Ambiente:</label>
                <select name="IdAmbienteSeleccionado">
                    @foreach (Ambiente am in Model.Ambientes)
                    {
                        <option value="@am.IdAmbiente">@am.TipoAmbiente</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Iluminación:</label>
                <select name="IdIluminacionSeleccionada">
                    @foreach (Iluminacion il in Model.Iluminaciones)
                    {
                        <option value="@il.IdIluminacion">@il.Tipo</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<span class="text-success">@ViewBag.Resultado</span>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
