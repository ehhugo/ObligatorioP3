@model ObligatorioP3.Models.ViewModelPlanta
@using Dominio.Entidades

@{
    ViewData["Title"] = "Create";
}

<h1>Dar de alta nueva Planta</h1>

<h4>Datos:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" id="formAltaPlanta" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Planta.NombreCientifico" class="control-label">Nombre Científico</label>
                <input asp-for="Planta.NombreCientifico" id="NombreCientifico" value="Planta De Prueba" class="form-control" />
                <span asp-validation-for="Planta.NombreCientifico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Planta.Descripcion" class="control-label">Descripción</label>
                <input asp-for="Planta.Descripcion" id="Descripcion" value="Descripción de la planta de Prueba" class="form-control" />
                <span asp-validation-for="Planta.Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Planta.AlturaMaxima" class="control-label">Altura Máxima</label>
                <input type="number" asp-for="Planta.AlturaMaxima" id="AlturaMaxima" value="300" class="form-control" />
                <span asp-validation-for="Planta.AlturaMaxima" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Planta.FrecuenciaRiego" class="control-label">Frecuencia de riego</label>
                <input asp-for="Planta.FrecuenciaRiego" id="FrecuenciaRiego" value="15 días" class="form-control" />
                <span asp-validation-for="Planta.FrecuenciaRiego" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Planta.TemperaturaMantenimiento" class="control-label">Temperatura de Mantenimiento</label>
                <input type="number" asp-for="Planta.TemperaturaMantenimiento" id="TemperaturaMantenimiento" value="25" class="form-control" />
                <span asp-validation-for="Planta.TemperaturaMantenimiento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Imagen" class="control-label"></label>
                <input asp-for="Imagen" class="form-control" />
            </div>

            <div class="form-group">
                <label class="control-label">Tipo:</label>
                <select name="IdTipoSeleccionado" id="selTipoplanta">
                    <option value="-1">-- Seleccione Tipo --</option>
                    @foreach (Tipo t in Model.Tipos)
                    {
                        <option value="@t.IdTipo">@t.Nombre</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Ambiente:</label>
                <select name="IdAmbienteSeleccionado" id="selAmbiente">
                    <option value="-1">-- Seleccione ambiente --</option>
                    @foreach (Ambiente am in Model.Ambientes)
                    {
                        <option value="@am.IdAmbiente">@am.TipoAmbiente</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Iluminación:</label>
                <select name="IdIluminacionSeleccionada" id="selIluminacion">
                    <option value="-1">-- Seleccione iluminación --</option>
                    @foreach (Iluminacion il in Model.Iluminaciones)
                    {
                        <option value="@il.IdIluminacion">@il.Tipo</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Dar de alta" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<span class="text-success">@ViewBag.Resultado</span>
<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
