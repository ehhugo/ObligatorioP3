@model Dominio.Entidades.Tipo

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar tipo</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="get" id="formEditarTipo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Ingresar texto</label>
                <input id ="textoBuscado" name="nombre" type="search" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Buscar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@if (Model != null)
{
    <h4>Tipo</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" id="formEditarTipoEncontrado">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" hidden>
                    <label asp-for="IdTipo" class="control-label"></label>
                    <input asp-for="IdTipo" class="form-control" />
                    <span asp-validation-for="IdTipo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" readonly />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label"></label>
                    <input id="txtDescripcionEdit" asp-for="Descripcion" class="form-control" />
                    <span  asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}
<div>
    <a asp-action="Index">Volver al listado</a>
</div>

<span class="text-danger" id="pMensaje">@ViewBag.Resultado</span>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.querySelector("#formEditarTipo").addEventListener('submit', validarDatos);
        document.querySelector("#formEditarTipoEncontrado").addEventListener('submit', validarDatosEncontrado);

        function validarDatos(evento) {
            event.preventDefault();

            let txtBuscado = document.querySelector("#textoBuscado").value;
            

            if (validarTexto(txtBuscado)) {
                this.submit()

            } else {
                document.querySelector("#pMensaje").innerHTML = "Por favor indique un Tipo.";
            }
        }

        function validarDatosEncontrado(evento) {
            event.preventDefault();

            let txtDescEdit = document.querySelector("#txtDescripcionEdit").value;


            if (validarTexto(txtDescEdit) && txtDescEdit.trim().length > 10 && txtDescEdit.trim().length <= 200) {
                this.submit()

            } else {
                document.querySelector("#pMensaje").innerHTML = "La descripción debe tener al menos 10 caracteres";
            }
        }

        function validarTexto(value) {
            ret = false;
            if (value != null && isNaN(value) && value.trim().length > 0) {
                ret = true;
            }
            return ret;
        }
    </script>
}
