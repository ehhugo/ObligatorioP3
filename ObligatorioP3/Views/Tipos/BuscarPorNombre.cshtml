@model Dominio.Entidades.Tipo

@{
    ViewData["Title"] = "BuscarPorNombre";
}

<h1>Buscar tipo por nombre</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="buscarPorNombre">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Ingresar texto</label>
                <input name="textoBuscado" type="search" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Buscar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@if (Model != null)
{
    
        <table class="table">
            <thead>
                <tr>                    
                    <th>
                        Nombre
                    </th>
                    <th>
                        Descripcion
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                
                    <tr>
                        <td>
                            @Model.Nombre
                        </td>
                        <td>
                            @Model.Descripcion
                        </td>                       
                    </tr>
                
            </tbody>
        </table>
    
}


<span class="text-danger">@ViewBag.Resultado</span>