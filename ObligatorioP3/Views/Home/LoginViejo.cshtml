<h1> Iniciar Sesión</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" id="formLogin">
            <div class="form-group">
                <label class="control-label">Nombre de Usuario</label>
                <input type="text" id="txtNomUsuario" name="nomUsuario" class="form-control" />
                <span id="spNomUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Contraseña</label>
                <input type="password" id="passContrasenia" name="contrasenia" class="form-control" />
                <span id="spcontrasenia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
        <div class="form-group">
            <span class="text-danger" id="pMensaje">@ViewBag.msg</span>
        </div>
    </div>
</div>



@section Scripts{
    <script>
        document.querySelector("#formLogin").addEventListener('submit', validarDatos);

        function validarDatos(evento) {
            evento.preventDefault();
            let nomUsu = document.querySelector("#txtNomUsuario").value;
            let pass = document.querySelector("#passContrasenia").value;

            if (nomUsu != "" && pass != "") {
                this.submit()

            } else {
                document.querySelector("#pMensaje").innerHTML = "Ingrese nombre de usuario y contraseña";
            }
        }
    </script>
}